<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".MainActivity"
    android:layout_gravity="top"
    android:orientation="vertical">

    <!-- Top Bar -->
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="top">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:background="@color/marrom"/>



       <ImageView
           android:layout_width="90dp"
           android:layout_height="80dp"
           android:background="@drawable/gradient"
           android:layout_gravity="center"/>



       <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/tv"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="19dp"
            android:background="@color/white"/>

       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:background="@drawable/toggle"
           android:layout_margin="15dp"/>

       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:background="@drawable/menu"
           android:layout_gravity="end"
           android:layout_marginTop="15dp"
           android:layout_marginRight="20dp"/>

   </FrameLayout>

    <!-- Nome do Aparelho -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/linha"
            android:textSize="40dp"
            android:text="Tv"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- Tela de Medição -->
    <FrameLayout
    android:layout_width="280dp"
    android:layout_height="3dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/linha"
    android:layout_marginTop="170dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="20dp"
            android:background="@color/marrom"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
             android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,35"
            android:textSize="60dp"
            android:textColor="@color/linha"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"/>

        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/linha"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="65dp"
            android:background="@color/marrom"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/relogio"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="@color/linha"
            android:layout_marginTop="135dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:text="00:01:05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tensão"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potência"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="220dp"/>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/linha"
            android:layout_marginTop="260dp"/>
        
        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:background="@color/marrom"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/linha"
            android:textStyle="bold"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="65dp"
            android:textSize="45dp"
            android:text="110v"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/linha"
            android:textStyle="bold"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="210dp"
            android:textSize="45dp"
            android:text="900w"/>
        
    </FrameLayout>

    <!-- ESTILO CAIXA DE BAIXO -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/marrom" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

    </FrameLayout>

    <!-- CAIXA COM OS BOTÕES DE BAIXO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/calendário"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/medir"
            android:foregroundGravity="bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginLeft="80dp"
            android:background="@drawable/config"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</FrameLayout>
